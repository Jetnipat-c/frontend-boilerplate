{
  "extends": ["airbnb", "next/core-web-vitals", "prettier"],
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["./tsconfig.json"]
      }
    }
  ],
  "rules": {
    "indent": ["error", 2],
    "no-param-reassign": "off",
    "import/extensions": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".tsx"]
      }
    ],
    "react/jsx-props-no-spreading": "off"
  }
}
